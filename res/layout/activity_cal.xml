<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/history"
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10sp"
                android:singleLine = "true"
                android:text="History"
                android:textSize="50sp"
                />

            <TextView
                android:id="@+id/input"
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10sp"
                android:singleLine = "true"
                android:text="Input"
                android:textSize="50sp"
                />

            <TextView
                android:id="@+id/res"
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10sp"
                android:singleLine = "true"
                android:text="Result"
                android:textSize="50sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_weight="1"
                    android:height="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btn1"
                    android:text="sin"
                    android:textSize="22sp" />

                <Button
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btn2"
                    android:text="cos"
                    android:textSize="22sp" />

                <Button
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btn3"
                    android:text="tan"
                    android:textSize="22sp" />

                <Button
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btn4"
                    android:text="("
                    android:textSize="22sp" />

                <Button
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btn5"
                    android:text=")"
                    android:textSize="22sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="%"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="AC"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="CE"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="←"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="÷"
                    android:textSize="26sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn11"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1/X"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn13"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="×"
                    android:textSize="26sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn16"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="PI"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn17"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn18"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn19"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn20"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="－"
                    android:textSize="26sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn21"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="√"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn22"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn23"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn24"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn25"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="＋"
                    android:textSize="26sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn26"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="X!"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn27"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="00"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn28"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn29"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="."
                    android:textSize="26sp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn30"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="="
                    android:textSize="26sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Calculator"
                android:textSize="26sp"
            />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

