<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="10"
        android:columnCount="5"

        >
        <TextView
            android:layout_columnSpan="5"
            android:layout_gravity="fill"
            android:text="History"
            android:textSize="50sp"
            />

        <TextView
            android:layout_columnSpan="5"
            android:layout_gravity="fill"
            android:text="Input"
            android:textSize="50sp"
            />

        <TextView
            android:layout_columnSpan="5"
            android:layout_gravity="fill"
            android:text="Result"
            android:textSize="50sp"
            />

        <Button
            android:id="@+id/btn1"
            android:text="sin"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn2"
            android:text="cos"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn3"
            android:text="tan"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn4"
            android:text="("
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn5"
            android:text=")"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn6"
            android:text="%"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn7"
            android:text="AC"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn8"
            android:text="+-"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn9"
            android:text="`-"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn10"
            android:text="/"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn11"
            android:text="1/X"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn12"
            android:text="7"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn13"
            android:text="8"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn14"
            android:text="9"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn15"
            android:text="*"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn16"
            android:text="PI"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn17"
            android:text="4"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn18"
            android:text="5"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn19"
            android:text="6"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn20"
            android:text="-"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn21"
            android:text="-/"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn22"
            android:text="1"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn23"
            android:text="2"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn24"
            android:text="3"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn25"
            android:text="+"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn26"
            android:text="X!"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn27"
            android:text="00"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn28"
            android:text="0"
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn29"
            android:text="."
            android:textSize="26sp" />
        <Button
            android:id="@+id/btn30"
            android:text="="
            android:textSize="26sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_columnSpan="5"
            android:layout_gravity="fill"
            android:text="Notice"
            android:textSize="50sp" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>